.slide swiper{
	height: 450rpx;
}
image.slide-image{
	
	width: 100%;
	height: 100%;
}
.desc{
	padding: 20rpx;
}
.desc .title{
	font-size: 60rpx;
}
.board{
	padding: 20rpx;
	display: flex;
	flex-direction: column;

}

.board navigator{
	margin-top: 35rpx;
	background-color: #FBF9FE;
}
.board navigator:first-child{
	margin-top: 0rpx;
}

.board .board-item{
	padding: 30rpx;
	display: flex;
	align-items: center;
}

.board .board-item text{
	flex: 1;
}
.board .board-item image{
	width : 35rpx;
	height : 35rpx;
	
}

.navigator-hover{
	background-color: lightgray;
}